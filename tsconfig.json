{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "lib": ["dom", "es5", "es2015", "es2018"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "target": "ES2017"
  },
  "include": ["./src", "./types"],
  "exclude": ["./node_modules"]
}
